 <div class="container">
    <div class="card">
{{#if products}}
   
        <table class="table table-hover shopping-cart-wrap">
            <thead class="text-muted">
                <tr>
                    <th scope="col">Product</th>
                    <th scope="col" width="120">Quantity</th>
                    <th scope="col" width="120">Price</th>
                    <th scope="col" width="200" class="text-right">Action</th>
                </tr>
            </thead>
            <tbody>

                {{#each products}}
                <tr>
                    <td>
                        <figure class="media">
                            <div class="img-wrap"><img src="{{this.item.imagePath}}" class="img-thumbnail img-sm"></div>
                            <figcaption class="media-body">
                                <h6 class="title text-truncate">{{this.item.title}}</h6>
                                <dl class="param param-inline small">
                                    <dt><i class="fas fa-info-square"></i></dt>
                                    <dd>{{this.item.description}}</dd>
                                </dl>
                            </figcaption>
                        </figure>
                    </td>


                    <td>
                        <span class="badge badge-dark">{{this.qty}}</span>
                    </td>
                    <td>
                        <div class="price-wrap">
                            <var class="price"> &#8377; {{this.price}}</var>
                        </div> <!-- price-wrap .// -->
                    </td>
                    <td class="text-right">
                        <div class="dropdown">
                            <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink"
                                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Actions
                            </a>

                            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                <a class="dropdown-item" href="#">Remove</a>
                                <a class="dropdown-item" href="#">Reduce by 1</a>
                            </div>
                        </div>
                    </td>
                </tr>
                {{/each}}
                <tr>
                    <td></td>
                    <td></td>
                    <td>&#8377;{{totalAmt}}</td>
                    <td class="text-right"><a class="btn btn-secondary" role="button" href="/checkout">Checkout</a></td>


                </tr>

            </tbody>
        </table>
    
{{else}}
    <h1 class="text-center"><i class="fas fa-shopping-cart"></i> NO Items In Cart</h1>
{{/if}}
</div> <!-- card.// -->

</div>
<!--container end.//-->